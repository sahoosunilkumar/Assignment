<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners
                android:radius="4dp">
            </corners>
            <stroke android:width="1dp" android:color="#ffffff"/>
            <gradient
                android:startColor="#187cb6"
                android:endColor="#187cb6"
                android:angle="270"/>
        </shape>
    </item>
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/colorPrimaryDark" />
            <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/colorPrimary" />
        </selector>
    </item>
</layer-list>