<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EE4054</item>
        <item name="colorPrimaryDark">#D6374A</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Product">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#515151</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="Product.Title">
        <item name="android:textColor">#515151</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Product.Price">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Product.Freshness">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/violet</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
